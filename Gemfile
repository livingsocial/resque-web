  gem 'coffee-rails', '~> 3.2.1'
  gem 'jquery-rails'
  gem 'twitter-bootstrap-rails'

  gem 'libv8', '3.3.10.4'
  gem 'therubyracer', '~> 0.10.0', :platforms => :ruby

  gem 'uglifier', '>= 1.0.3'
end
